<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00CBFF"/>
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:bottomLeftRadius="12dip"
                android:topRightRadius="2dip"
                android:topLeftRadius="12dip"
                android:bottomRightRadius="2dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#70c656"
                android:endColor="#0067FF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:bottomLeftRadius="10dip"
                android:topRightRadius="1dip"
                android:topLeftRadius="10dip"
                android:bottomRightRadius="1dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>